{
    "name": "sls-clean-architecture",
    "version": "0.0.1",
    "description": "Serverless Project With Clean Architecture",
    "author": "Gustavo Gutierrez",
    "license": "ISC",
    "main": "index.js",
    "scripts": {
        "start": "export AWS_PROFILE='gustavo'; sls offline start --stage=local --lambdaPort 3002",
        "dev": "export AWS_PROFILE='gustavo'; sls offline start --stage=dev",
        "deploy": "export AWS_PROFILE='gustavo'; sls prune -n 1 --stage=staging && sls deploy --stage=staging",
        "test": "jest --rootDir=./ --config ./jest.config.js",
        "lint": "eslint --ext .js,.ts,.tsx ./src",
        "lint-fix": "eslint --ext .js,.ts,.tsx ./src --fix",
        "format": "npx prettier --write ./src/**/*.{js,ts,tsx}",
        "build": "tsc",
        "db:local-install": "sls dynamodb install",
        "sls:doctor": "sls doctor",
        "sls:console": "sls --console"
    },
    "dependencies": {
        "@aws-lambda-powertools/logger": "^1.0.1",
        "aws-lambda": "^1.0.7",
        "aws-lambda-utils": "^0.0.2",
        "aws-sdk": "^2.1169.0",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^8.5.1",
        "lambda-multipart-parser": "^1.0.1",
        "memory-cache": "^0.2.0",
        "ms": "^2.1.3",
        "qrcode": "^1.5.1",
        "reflect-metadata": "^0.1.13",
        "sharp": "^0.30.7",
        "speakeasy": "^2.0.0",
        "tsyringe": "^4.7.0",
        "uuid": "^8.3.2",
        "zod": "^3.17.3"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.101",
        "@types/bcryptjs": "^2.4.2",
        "@types/jest": "^28.1.4",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/memory-cache": "^0.2.2",
        "@types/ms": "^0.7.31",
        "@types/node": "^18.0.3",
        "@types/qrcode": "^1.4.2",
        "@types/sharp": "^0.30.4",
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^5.30.5",
        "@typescript-eslint/parser": "^5.30.5",
        "esbuild": "^0.14.48",
        "eslint": "^8.19.0",
        "jest": "^28.1.2",
        "jest-mock-extended": "^2.0.6",
        "prettier": "^2.7.1",
        "serverless": "^3.19.0",
        "serverless-dotenv-plugin": "^4.0.1",
        "serverless-dynamodb-local": "^0.2.40",
        "serverless-esbuild": "^1.31.0",
        "serverless-offline": "^8.8.0",
        "serverless-offline-sns": "^0.76.0",
        "serverless-prune-plugin": "^2.0.1",
        "test-jest": "^1.0.1",
        "ts-jest": "^28.0.5",
        "ts-node": "^10.8.2",
        "tsconfig-paths": "^4.0.0",
        "typescript": "^4.7.4"
    }
}
